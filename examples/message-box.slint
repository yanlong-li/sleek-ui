import { ButtonType } from "../widgets/button.slint";

import { Title } from "title.slint";
export component MessageBox {
    VerticalBox {

        title := Title {
            text: "Message Box";
        }

        mb := MessageBox {
            title: "MessageBox Title";
            message: "MessageBox Content";
            confirm-button-text: "Ok";
            confirm-clicked => {
                debug("confirm clicked");
            }
