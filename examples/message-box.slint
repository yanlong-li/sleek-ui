        mb2 := MessageBox {
            title: "MessageBox Title";
            message: "MessageBox Content";
            show-cancel-button: true;
            confirm-button-type: ButtonType.Success;
            cancel-button-type: ButtonType.Danger;
            confirm-clicked => {
                debug("confirm clicked");
            }
            cancel-clicked => {
                debug("cancel clicked")
            }
        }
    }
